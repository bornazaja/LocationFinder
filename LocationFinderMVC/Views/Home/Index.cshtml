<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Finder</title>
    <link href="~/Content/custom/custom-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom/app.css" rel="stylesheet" />
    <link href="~/Content/datatables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <div class="navbar-brand">Location Finder</div>
    </nav>

    <br />

    <div class="container">

        <div id="filterModal" class="modal hide fade" data-backdrop="static" data-keyboard="false" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title font-weight-bold">Filters</h5>
                        <button type="button" class="close pull-lg-right" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-horiznotal">

                            <div class="md-form form-group mb-3">
                                <input type="text" id="txtTerm" class="form-control" />
                                <label>Term:</label>
                            </div>

                            <div class="form-group mb-3">
                                <label>Category:</label>
                                <select id="ddlCategories" class="form-control" data-width="100%"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label>Radius:</label>
                                <select id="ddlRadiuses" class="form-control" data-width="100%"></select>
                            </div>

                            <div class="form-group mb-3">
                                <label>Items per page:</label>
                                <select id="ddlItemsPerPage" class="form-control" data-width="100%"></select>
                            </div>

                            <input type="button" id="btnApply" value="Apply" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="font-weight-bold mb-4">Nearby places</h5>
                    </div>
                    <div class="col">
                        <div class="float-right">
                            <input type="button" class="btn btn-secondary" data-toggle="modal" data-target="#filterModal" value="Filters" />
                        </div>
                    </div>
                </div>
                <table id="tblNearbyPlaces" class="table table-striped nowrap">
                    <thead>
                        <tr>
                            <th>Address</th>
                            <th>Place</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                </table>
                <br />
                <div id="nearbyPlacesPagination"></div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
    <script src="~/Scripts/mdb/mdb.min.js"></script>
    <script src="~/Scripts/popper/popper.min.js"></script>
    <script src="~/Scripts/datatables/datatables.min.js"></script>
    <script src="~/Scripts/select2/select2.min.js"></script>
    <script src="~/Scripts/bootbox/bootbox.min.js"></script>
    <script src="~/Scripts/twbs-pagination/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/custom/app.js"></script>
    <script src="~/Scripts/custom/index.js"></script>
</body>
</html>